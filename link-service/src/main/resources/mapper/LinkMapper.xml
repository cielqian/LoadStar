<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.ciel.pocket.link.mapper.LinkMapper" >
  <resultMap id="BaseResultMap" type="com.ciel.pocket.link.domain.Link" >
    <!--
      WARNING - @mbg.generated
    -->
    <id column="id" property="id" jdbcType="BIGINT" />
    <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
    <result column="is_delete" property="isDelete" jdbcType="BIT" />
    <result column="update_time" property="updateTime" jdbcType="TIMESTAMP" />
    <result column="comment" property="comment" jdbcType="VARCHAR" />
    <result column="folder_id" property="folderId" jdbcType="BIGINT" />
    <result column="icon" property="icon" jdbcType="VARCHAR" />
    <result column="last_seen" property="lastSeen" jdbcType="TIMESTAMP" />
    <result column="name" property="name" jdbcType="VARCHAR" />
    <result column="sort_index" property="sortIndex" jdbcType="INTEGER" />
    <result column="title" property="title" jdbcType="VARCHAR" />
    <result column="url" property="url" jdbcType="VARCHAR" />
    <result column="user_id" property="userId" jdbcType="BIGINT" />
    <result column="visited_count" property="visitedCount" jdbcType="INTEGER" />
  </resultMap>

  <select id="findAllByUserIdAndIsDeleteEqualsAndTagIdEquals" resultMap="BaseResultMap">
      SELECT l.*
      FROM link_tag AS lt
      LEFT JOIN link AS l
      ON lt.link_id = l.id
      WHERE l.is_delete = 0
      AND l.user_id = #{userId}
      AND lt.tag_id = #{tagId}
  </select>

</mapper>